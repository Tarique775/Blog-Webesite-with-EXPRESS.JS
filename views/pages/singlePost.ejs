<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <script src="https://kit.fontawesome.com/e23e3d5407.js"></script>
  </head>
  <body class="bg-light">
    <%- include('./nabbar.ejs') -%>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card card-body">
            <section>
              <h3><%= post.title %></h3>
              <div class="d-flex">
                <small>
                  <%= moment(post.createdAt) %>, Posted By <%=
                  post.author.username %>, <%= post.readTime %>
                </small>
                <% if (user) { %>
                <span class="ms-auto bookmark" data-post="<%= post._id %>">
                  <% if (bookmarks.includes(post._id)) { %>
                  <i class="fas fa-bookmark"></i>
                  <% } else { %>
                  <i class="far fa-bookmark"></i>
                  <% } %>
                </span>
                <% } %>
              </div>
              <% if (post.thumbnail) { %>
              <img src="<%= post.thumbnail %>" class="img-fluid my-2" />
              <% } %>
              <section><%- post.body %></section>
              <section>
                <% if (!user) { %>
                <button class="btn btn-success btn-sm" disabled>
                  Like ( <%= post.likes.length %> )
                </button>
                <button class="btn btn-danger btn-sm" disabled>
                  Dislike ( <%= post.dislikes.length %> )
                </button>
                <p class="text-center text-muted my-3">
                  To Like And Comment Please <a href="/api/user/login">Login</a>
                </p>
                <% } else { %>
                <button
                  class="btn btn-success btn-sm"
                  id="likeBtn"
                  data-post="<%= post._id %>"
                >
                  <%= post.likes.includes(user._id) ? 'Liked' : 'Like' %> ( <%=
                  post.likes.length %> )
                </button>
                <button
                  class="btn btn-danger btn-sm"
                  id="dislikeBtn"
                  data-post="<%= post._id %>"
                >
                  <%= post.dislikes.includes(user._id) ? 'Disliked' : 'Dislike'
                  %> ( <%= post.dislikes.length %> )
                </button>
                <div class="mt-4">
                  <label for="comment">Leave A Comment</label>
                  <input
                    type="text"
                    class="form-control"
                    id="comment"
                    placeholder="Press Enter to Submit"
                    data-post="<%= post._id %>"
                  />
                </div>
                <div class="mt-5" id="comment-holder">
                  <% if (post.comments.length = 0) { %>
                  <p class="text-muted text-center">There is No Comment</p>
                  <% } else {%> <% for (let comment of post.comments.reverse())
                  { %>
                  <div class="media border">
                    <img
                      src="<%= comment.user.profilePics %>"
                      class="rounded-circle mx-3 my-3"
                      style="width: 40px"
                    />
                    <div class="media-body my-3">
                      <p><%= comment.body %></p>
                      <div name="replies">
                        <% if (comment.replies.length > 0) { %> <% for (letreply
                        of comment.replies) { %>
                        <div class="media mt-3">
                          <img
                            src="<%= reply.user.profilePics %>"
                            class="align-self-start mr-3 rounded-circle"
                            style="width: 40px"
                          />
                          <div class="media-body">
                            <p><%= reply.body %></p>
                          </div>
                        </div>
                        <% } %> <% } %>
                      </div>
                      <div class="my-3">
                        <input
                          type="text"
                          class="form-control"
                          placeholder="Press Enter to
                        Reply"
                          name="reply"
                          data-comment="<%= comment._id %>"
                        />
                      </div>
                    </div>
                  </div>
                  <% } %> <% } %>
                </div>
                <% } %>
              </section>
            </section>
          </div>
        </div>
      </div>
    </div>
    <%- include('./footer.ejs') -%>

    <script src="/scripts/likeDislike.js"></script>
  </body>
</html>
