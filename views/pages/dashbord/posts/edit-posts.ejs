<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit-Posts</title>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-light">
    <%- include('../../nabbar.ejs') -%>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2"><%-include('../../dashbord-nav.ejs') -%></div>
        <div class="col-md-10">
          <div class="row">
        <div class="col-md-8 offset-md-1">
          <div class="card card-body my-5">
            <h4>Edit Post</h4>
            
            <form
              action="/dashbord/edit-posts/<%= post._id %>"
              method="POST"
              
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label for="title">Enter Your Post Title</label>
                <input
                  type="text"
                  name="title"
                  id="title"
                  class="form-control <%= error.title ?'is-invalid' : ''%>"
                  value="<%= post.title ? post.title : ''%>"
                />
                <div class="invalid-feedback">
                  <strong><%=error.title && error.title%></strong>
                </div>
              </div>
              <br>
              <div class="form-group">
                <label for="tiny-mce-post-body">Enter Your Post Body</label>
                <textarea
                  name="body"
                  id="tiny-mce-post-body"
                  class="form-control <%= error.body ?'is-invalid' : ''%>"
                ><%= post.body ? post.body : ''%></textarea>
                <div class="invalid-feedback">
                  <strong><%=error.body && error.body%></strong>
                </div>
              </div>
              <br>
              <div class="form-group">
                <label for="tags">Enter Your Tags (Max 10)</label>
                <input
                  type="text"
                  name="tags"
                  id="tags"
                  placeholder="tag1,tag2,tag3"
                  class="form-control"
                  value="<%= post.tags.length > 0 ? post.tags.join(', ') : ''%>"
                />
              </div>
              <br>
              <% if(post.thumbnail) { %>
                <label >Post Thumbnail</label><br>
                <img src="<%= post.thumbnail %>" id="thumbnail" alt="Post Thumbnail" class="img-thumbnail img-fluid mb-4" >
            <% } %>
              <br>
                <div class="mb-3">
                  <label for="formFile" class="form-label"
                    >Choose A Photo</label
                  >
                  <input class="form-control" type="file" id="formFile" name="photo" />
                 
                </div>
              <input
                type="submit"
                class="btn btn-primary "
                value="Update Post"
              />
              <a class="btn btn-danger" href="/dashbord/delete-posts/<%= post._id %>">Delete Post</a>
            </form>
          </div>
          </div>
        </div>
      </div>
        </div>
      </div>
    </div>
    <%- include('../../footer.ejs') -%>
     <script src="https://cdn.tiny.cloud/1/lrpil8nsgi9viih3y7q30s0nqxeaqfwgn6s104vgbxzi2va5/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

     <script src="/scripts/tinymce.js"></script>
  </body>
</html>
