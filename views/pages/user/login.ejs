<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-light">
    <%- include('../nabbar.ejs') -%>
    <div class="container my-container my-5">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card card-body rounded-3 my-4 mx-5">
            <h1 class="mx-5 mb-3">Login</h1>

            <% if(Email !=''){ %>
            <div
              class="alert alert-warning alert-dismissible fade show mx-5"
              role="alert"
            >
              <strong><%=Email%></strong>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
              ></button>
            </div>
            <% } if(Password !=''){ %>
            <div
              class="alert alert-warning alert-dismissible fade show mx-5"
              role="alert"
            >
              <strong><%=Password%></strong>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
              ></button>
            </div>
            <% } %>
            <form class="mx-5" action="/api/user/login" method="POST">
              <div class="form-group">
                <strong><label class="mb-2" for="email">Email</label></strong>
                <input
                  type="email"
                  class="form-control <%= error.email ? 'is-invalid' : ''%> rounded-pill"
                  name="email"
                  id="email"
                />
                <div class="invalid-feedback">
                  <strong><%=error.email && error.email%></strong>
                </div>
              </div>
              <br />
              <div class="form-group">
                <strong
                  ><label class="mb-2" for="password">Password</label></strong
                >
                <input
                  type="password"
                  class="form-control <%= error.password ? 'is-invalid' : ''%> rounded-pill"
                  name="password"
                  id="password"
                />
                <div class="invalid-feedback">
                  <strong><%=error.password && error.password%></strong>
                </div>
              </div>
              <br />
              <button type="submit" class="btn btn-primary mb-2 rounded-pill">
                Login
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
